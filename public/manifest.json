{
  "manifest_version": 3,
  "name": "Web Page to Markdown Exporter",
  "version": "1.0",
  "description": "Scrape web pages and download them as Markdown files.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
